<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD page</title>
    <style>
      table,
      thead,
      tbody,
      td,
      tr {
        border: 1px solid #000;
        border-collapse: collapse;
      }
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #000;
        text-align: left;
        padding: 8px;
      }
      thead {
        font-weight: 600;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      .btn {
        border: none;
        outline: none;
        padding: 5px 8px;
        border-radius: 10px;
        color: #fff;
        background-color: coral;
        display: inline-block;
      }
      a {
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Adress</th>
          <th>Phone Number</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < data.length; i++) {%>
        <tr>
          <td><%= data[i].firstName %> <%= data[i].lastName %></td>
          <td><%= data[i].email %></td>
          <td><%= data[i].address %></td>
          <td><%= data[i].phonenumber %></td>
          <td>
            <a href="/edit-crud?id=<%= data[i].id %>" class="btn">Edit</a>
            <a href="/delete-crud?id=<%= data[i].id %>" class="btn">Delete</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
